{
  "version": 2,
  "name": "discover-my-newsletters",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "VITE_APP_TITLE": "Discover My Newsletters",
    "VITE_ENVIRONMENT": "production"
  },
  "domains": [
    "discovermynewsletters.com",
    "www.discovermynewsletters.com"
  ],
  "github": {
    "silent": true
  }
}
