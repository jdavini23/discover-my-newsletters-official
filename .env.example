# Environment
NODE_ENV=development

# Security
CSRF_SECRET=your-super-secret-csrf-key
JWT_SECRET=your-super-secret-jwt-key
COOKIE_SECRET=your-super-secret-cookie-key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=newsletter_development

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# API Configuration
API_PORT=4000
API_URL=http://localhost:4000

# Frontend Configuration
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:4000

# JWT Configuration
JWT_EXPIRATION=24h

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-password

# Optional Services
ENABLE_RATE_LIMITING=true
ENABLE_CACHE=true

# Session
SESSION_SECRET=your-super-secret-session-key
SESSION_DURATION=86400000 # 24 hours in milliseconds

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_firebase_measurement_id

# Machine Learning Service (Optional)
ML_SERVICE_ENDPOINT=https://your-ml-service-endpoint.com
ML_SERVICE_API_KEY=your_ml_service_api_key

# Logging and Monitoring
SENTRY_DSN=your_sentry_dsn

# Feature Flags
VITE_ENABLE_AB_TESTING=true
VITE_ENABLE_RECOMMENDATION_INSIGHTS=true

# Development Settings
VITE_ENVIRONMENT=development
