{
  "name": "newsletter-discovery-mvp",
  "version": "0.1.0",
  "private": true,
  "description": "MVP for Newsletter Discovery Platform",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src/**/*.{ts,tsx}",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "seed": "node scripts/seed.js",
    "seed:newsletters": "node scripts/seedNewsletters.js",
    "seed:user-preferences": "node scripts/seedUserPreferences.js",
    "seed:user-interactions": "node scripts/seedUserInteractions.js",
    "seed:all": "npm run seed:newsletters && npm run seed:user-preferences && npm run seed:user-interactions"
  },
  "dependencies": {
    "firebase": "^9.22.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.2",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.36.0",
    "postcss": "^8.4.24",
    "prettier": "^2.8.4",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.9"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  }
}
